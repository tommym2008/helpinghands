---
let { type, name, id, placeholder } = Astro.props

const twClasses = `
    border
    rounded-md
    px-2
    py-0.75
    md:p-2
    border-words-50
    outline-words-50
    text-inherit
`
---

<input
  type={type}
  name={name}
  id={id}
  placeholder={placeholder}
  class={twClasses}
  autocomplete="off"
  spellcheck="false"
/>
